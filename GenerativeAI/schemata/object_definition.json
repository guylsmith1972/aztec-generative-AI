{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "manufacturer": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "name": {
      "type": "string"
    },
    "related objects": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "type": {
      "type": "string"
    },
    "users": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "variants": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "assembly": {
      "type": "object",
      "properties": {
        "pieces needed": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "component", "location", "feature", "material" ]
              },
              "description": {
                "type": "string"
              },
              "quantity": {
                "type": "string"
              }
            },
            "required": [ "type", "description" ]
          }
        },
        "tools needed": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [ "pieces needed", "tools needed" ]
    }
  },
  "required": [ "description", "manufacturer", "name", "related objects", "type", "users", "variants", "assembly" ]
}
