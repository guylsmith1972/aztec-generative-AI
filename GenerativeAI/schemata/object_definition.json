{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "manufacturer": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "name": {
      "type": "string"
    },
    "related objects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [ "description", "name", "type" ]
      }
    },
    "users": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "dimension_cm": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer"
          }
        },
        "required": [ "name", "description", "dimension_cm", "quantity" ]
      }
    }
  },
  "required": [ "type", "description", "manufacturer", "name", "related objects", "users", "components" ]
}
